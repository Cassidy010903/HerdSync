@page "/programhistory"
@rendermode @(new InteractiveServerRenderMode(prerender: true))
@using HerdSync.Shared.DTO.Program

<div class="container">
    <div class="text-center mb-5">
        <h3>Program History</h3>
        <p class="lead">Previously run programs and their data</p>
    </div>

    @if (_loading)
    {
        <HerdLoader />
    }
    else if (!ProgramList.Any())
    {
        <div class="text-center text-muted mt-5">
            <i class="bx bx-history" style="font-size: 48px;"></i>
            <p class="mt-2">No program history found.</p>
        </div>
    }
    else
    {
        @foreach (var program in ProgramList)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex flex-column flex-lg-row">
                        <span class="avatar avatar-text rounded-3 me-4 mb-2">PRG</span>
                        <div class="row flex-fill">
                            <div class="col-sm-5">
                                <h4 class="h5">@program.ProgramTemplateCode</h4>
                                @if (!string.IsNullOrEmpty(program.Notes))
                                {
                                    <span class="badge bg-secondary">@program.Notes</span>
                                }
                            </div>
                            <div class="col-sm-4 py-2">
                                <span class="badge bg-secondary">
                                    @program.RunDate.ToString("dd MMM yyyy")
                                </span>
                            </div>
                            <div class="col-sm-3 text-lg-end">
                                <a href="#" class="btn btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>