@page "/cowprofile"

<div class="container">
	<div class="row gutters">
		<div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
			<div class="card h-100">
				<div class="card-body">
					<div class="account-settings">
						<div class="user-profile">
							<div class="user-avatar">
								<img src="/cowface.jpg" alt="Face of cow">
							</div>
							<h5 class="user-name">Cow 11</h5>
							<h6 class="user-email">Yellow</h6>
						</div>
						<div class="about">
							<h5>Family Tree</h5>
							<div>
								<h6 class="mb-2 text-primary">Parent/s</h6>
							</div>
							<div>
								Unknown
							</div>
							<div>
								<h6 class="mb-2 text-primary">Calfs</h6>
							</div>
							<div>
								Yellow 110<br />
								Yellow 130 (Expected)
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
			<div class="card h-100">
				<div class="card-body">
					<div class="row gutters">
						<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
							<h6 class="mb-2 text-primary">Biographical Information</h6>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="fullName">Cow Number</label>
								<input type="text" class="form-control" id="number" placeholder="11">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="eMail">Colour</label>
								<input type="email" class="form-control" id="colour" placeholder="Yellow">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="phone">Weight</label>
								<input type="text" class="form-control" id="weight" placeholder="400kg">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="website">Age</label>
								<input type="url" class="form-control" id="age" placeholder="6">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="website">Mother</label>
								<input type="url" class="form-control" id="mother" placeholder="Unknown">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="website">Est years left</label>
								<input type="url" class="form-control" id="years" placeholder="3">
							</div>
						</div>
					</div>
					<div class="row gutters">
						<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
							<h6 class="mt-3 mb-2 text-primary">Medical information</h6>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="Street">Disabilities</label>
								<input type="name" class="form-control" id="Street" placeholder="None">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="ciTy">Last pregnancy</label>
								<input type="name" class="form-control" id="ciTy" placeholder="28 June 2025">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="sTate">Total pregnancies</label>
								<input type="text" class="form-control" id="sTate" placeholder="2">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="zIp">Total Calfs</label>
								<input type="text" class="form-control" id="zIp" placeholder="1">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="zIp">Calfs</label>
								<input type="text" class="form-control" id="zIp" placeholder="Yellow 110">
							</div>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
							<div class="form-group">
								<label for="zIp">Branded</label>
								<input type="text" class="form-control" id="zIp" placeholder="Yes
									   
									   
									   
									   ">
							</div>
						</div>
					</div>
					<div class="row gutters">
						<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
							<div class="text-right">
								<button type="button" id="submit" name="submit" class="btn btn-secondary">Cancel</button>
								<button type="button" class="btn btn-primary">Update</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>