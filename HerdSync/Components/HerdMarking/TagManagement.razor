@page "/TagManagement"
@inject IDialogService DialogService
@rendermode @(new InteractiveServerRenderMode(prerender: true))
<PageTitle>Tag</PageTitle>

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="mb-3">
                <h5 class="card-title">Tag List <span class="text-muted fw-normal ms-2"> 10 Registered tags</span></h5>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex flex-wrap align-items-center justify-content-end gap-2 mb-3">
                <div>
                    <MudButton Onclick="@OpenDialogAsync" Variant="MudBlazor.Variant.Outlined" Color="Color.Secondary"><i class="bx bx-plus me-1"></i> New Tag</MudButton>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="table-responsive">
                    <table class="table project-list-table table-nowrap align-middle table-borderless">
                        <thead>
                            <tr>
                                <th scope="col">Tag ID</th>
                                <th scope="col">Cow Number</th>
                                <th scope="col" style="width: 200px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tag in TagList)
                            {
                                <tr>
                                    <td>@tag.stl_Tag_Id</td>
                                    <td>@GetAnimalInfo(tag.spd_Id)</td>
                                    <td>
                                        <ul class="list-inline mb-0">
                                            <li class="list-inline-item">
                                                <a data-bs-toggle="tooltip"
                                                   data-bs-placement="top"
                                                   title="Edit"
                                                   class="px-2 text-primary"
                                                   @onclick="() => EditDialog(tag.stl_Tag_Id)">
                                                    <i class="bx bx-pencil font-size-18"></i>
                                                </a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="javascript:void(0);" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete" class="px-2 text-danger"><i class="bx bx-trash-alt font-size-18"></i></a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>