@page "/TagManagement"
@using HerdSync.Shared.DTO.Animal
@inject IDialogService DialogService
@rendermode @(new InteractiveServerRenderMode(prerender: true))

<PageTitle>Tag Management</PageTitle>

<div class="container">
    <div class="row align-items-center">
        <div class="col-md-6">
            <div class="mb-3">
                <h5 class="card-title">Tag List <span class="text-muted fw-normal ms-2">@FilteredTagList.Count() Registered tags</span></h5>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex flex-wrap align-items-center justify-content-end gap-2 mb-3">
                <MudButton OnClick="@OpenDialogAsync" Variant="MudBlazor.Variant.Outlined" Color="Color.Secondary">
                    <i class="bx bx-plus me-1"></i> New Tag
                </MudButton>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <MudTextField @bind-Value="SearchTerm"
                          Placeholder="Search by RFID code or animal..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Variant="MudBlazor.Variant.Outlined"
                          Margin="Margin.Dense"
                          Clearable="true"
                          Class="w-100" />
        </div>
        <div class="col-md-4">
            <MudSelect T="string" @bind-Value="CurrentFilter"
                       Label="Current"
                       Variant="MudBlazor.Variant.Outlined"
                       Margin="Margin.Dense"
                       Clearable="true"
                       Class="w-100">
                <MudSelectItem Value="@("Yes")">Yes</MudSelectItem>
                <MudSelectItem Value="@("No")">No</MudSelectItem>
            </MudSelect>
        </div>
        <div class="col-md-1 d-flex align-items-center">
            <MudIconButton Icon="@Icons.Material.Filled.FilterAltOff"
                           Color="Color.Default"
                           Title="Clear Filters"
                           OnClick="ClearFilters" />
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table project-list-table table-nowrap align-middle table-borderless">
                    <thead>
                        <tr>
                            <th scope="col">RFID Code</th>
                            <th scope="col">Assigned To</th>
                            <th scope="col">Assigned Date</th>
                            <th scope="col">Current</th>
                            <th scope="col" style="width: 200px;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var tag in FilteredTagList)
                        {
                            <tr>
                                <td>@tag.RFIDTagCode</td>
                                <td>@GetAnimalInfo(tag.AnimalId)</td>
                                <td>@tag.AssignedDate.ToString("dd MMM yyyy")</td>
                                <td>@(tag.IsCurrent ? "Yes" : "No")</td>
                                <td>
                                    <ul class="list-inline mb-0">
                                        <li class="list-inline-item">
                                            <a class="px-2 text-primary" @onclick="() => EditDialog(tag.AnimalTagId)">
                                                <i class="bx bx-pencil font-size-18"></i>
                                            </a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="javascript:void(0);" class="px-2 text-danger">
                                                <i class="bx bx-trash-alt font-size-18"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private string _searchTerm = string.Empty;
    private string _currentFilter;

    private string SearchTerm
    {
        get => _searchTerm;
        set { _searchTerm = value; StateHasChanged(); }
    }

    private string CurrentFilter
    {
        get => _currentFilter;
        set { _currentFilter = value; StateHasChanged(); }
    }

    private IEnumerable<AnimalTagDTO> FilteredTagList => TagList
        .Where(t =>
            (string.IsNullOrWhiteSpace(SearchTerm) ||
             t.RFIDTagCode.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase) ||
             GetAnimalInfo(t.AnimalId).Contains(SearchTerm, StringComparison.OrdinalIgnoreCase)) &&
            (string.IsNullOrWhiteSpace(CurrentFilter) ||
             (CurrentFilter == "Yes" && t.IsCurrent) ||
             (CurrentFilter == "No" && !t.IsCurrent))
        );

    private void ClearFilters()
    {
        _searchTerm = string.Empty;
        _currentFilter = null;
    }
}