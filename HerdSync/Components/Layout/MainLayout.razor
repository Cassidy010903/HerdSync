@inherits LayoutComponentBase
@rendermode @(new InteractiveServerRenderMode(prerender: true))
<HeadContent>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
</HeadContent>

@* Navigation Guard *@
<NavigationGuard />

@* Required *@
<MudThemeProvider Theme="HerdSyncThemes" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.Medium"
                   CloseButton="true"
                   BackdropClick="false"
                   Position="MudBlazor.DialogPosition.Center"
                   CloseOnEscapeKey="true"
                   BackgroundClass="my-custom-class" />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Primary">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    <img src="/HerdSync_Long_Logo_Cropped.png" alt="HerdSync" style="height: 40px;" />
    <MudSpacer />
        <div class="hs-appbar-menu">
            <button class="hs-appbar-menu__trigger" @onclick="ToggleProfileMenu">
                <i class="bx bx-dots-vertical-rounded" style="font-size:22px; color:white;"></i>
            </button>
            @if (_profileMenuOpen)
            {
                <div class="hs-appbar-menu__backdrop" @onclick="CloseProfileMenu"></div>
                <div class="hs-appbar-menu__dropdown">
                    <button class="hs-appbar-menu__item">
                        <i class="bx bx-building me-2"></i> Farm Profile
                    </button>
                    <button class="hs-appbar-menu__item">
                        <i class="bx bx-user me-2"></i> User Profile
                    </button>
                </div>
            }
        </div>
</MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <div class="pa-4">
            @Body
        </div>
    </MudMainContent>
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code{
    private bool _profileMenuOpen = false;
    private void ToggleProfileMenu() => _profileMenuOpen = !_profileMenuOpen;
    private void CloseProfileMenu() => _profileMenuOpen = false;
}
